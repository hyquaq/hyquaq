{
    // editor
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "editor.fontSize": 14,
    "editor.lineHeight": 22,
    "editor.fontWeight": "400",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.codeLens": true,
    "editor.minimap.enabled": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.insertSpaces": true,
    "editor.cursorStyle": "line-thin",
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": true,
    "editor.acceptSuggestionOnEnter": "on",
    "editor.accessibilitySupport": "off",
    "editor.snippetSuggestions": "top",
    "editor.suggestSelection": "first",
    "editor.tabSize": 4,
    "editor.wordWrap": "off",
    "editor.tokenColorCustomizations": {
        "comments": "#635959"
    },
    // -------------------------------------------------------------------------------------------------------------------
    // file <=> explorer <=> windows
    "files.autoSave": "onFocusChange",
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "explorer.sortOrder": "type",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.enableDragAndDrop": false,
    "window.openFilesInNewWindow": "off",
    "window.openFoldersInNewWindow": "off",
    "window.titleSeparator": " :) ",
    "window.title": "${activeEditorLong}",
    // -------------------------------------------------------------------------------------------------------------------
    // workbench
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "Andromeda",
    "workbench.startupEditor": "none",
    "workbench.settings.editor": "json",
    "workbench.editorAssociations": [
        {
            "viewType": "jupyter.notebook.ipynb",
            "filenamePattern": "*.ipynb"
        }
    ],
    // -------------------------------------------------------------------------------------------------------------------
    // naviagtion bar above its contens called Breadcrumbs (thanh dia chi)
    "breadcrumbs.enabled": true,
    // duong dan
    "breadcrumbs.filePath": "on",
    // ham trong file
    "breadcrumbs.symbolPath": "on",
    // -------------------------------------------------------------------------------------------------------------------
    // Debug toolbar
    "debug.toolBarLocation": "docked",
    // -------------------------------------------------------------------------------------------------------------------
    // HTML
    "html.format.enable": true,
    // -------------------------------------------------------------------------------------------------------------------
    // markdown
    // tip: Ctrl shift v open preview
    "markdown.preview.scrollEditorWithPreview": true,
    "markdown.preview.scrollPreviewWithEditor": true,
    "markdown.extension.preview.autoShowPreviewToSide": true,
    "material-icon-theme.hidesExplorerArrows": true,
    // -------------------------------------------------------------------------------------------------------------------
    // terminal
    "terminal.explorerKind": "external",
    "terminal.external.linuxExec": "x-terminal-emulator",
    "terminal.integrated.shell.linux": "fish",
    "terminal.integrated.profiles.linux": {
        "fish": {
            "path": "fish"
        }
    },
    "terminal.integrated.shellArgs.windows": ["--login"],
    "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",
    // -------------------------------------------------------------------------------------------------------------------
    // code runner
    "code-runner.runInTerminal": true,
    "code-runner.saveAllFilesBeforeRun": true,
    // -------------------------------------------------------------------------------------------------------------------
    // intellicode
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "vsintellicode.python.completionsEnabled": true,
    // -------------------------------------------------------------------------------------------------------------------
    // git
    "git.autofetch": true,
    // -------------------------------------------------------------------------------------------------------------------
    // json
    "json.format.enable": true,
    // -------------------------------------------------------------------------------------------------------------------
    // java
    "java.home": "/usr/lib/jvm/java-1.11.0-openjdk-amd64",
    // "java.home": "C:\\Users\\Python\\AppData\\Local\\Programs\\AdoptOpenJDK\\jdk-11.0.9.101-hotspot",
    "java.help.firstView": "gettingStarted",
    // -------------------------------------------------------------------------------------------------------------------
    // tabnine
    "tabnine.experimentalAutoImports": true,
    // -------------------------------------------------------------------------------------------------------------------
    // live server
    "liveServer.settings.donotVerifyTags": true,
    // -------------------------------------------------------------------------------------------------------------------
    // sync
    "sync.autoDownload": true,
    "sync.autoUpload": true,
    "sync.quietSync": true,
    // -------------------------------------------------------------------------------------------------------------------
    // better comments
    "better-comments.highlightPlainText": true,
    "better-comments.tags": [
        {
            "tag": "!",
            "color": "#FF2D00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "?",
            "color": "#3498DB",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "//",
            "color": "#474747",
            "strikethrough": true,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "todo",
            "color": "#FF8C00",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        },
        {
            "tag": "*",
            "color": "#98C379",
            "strikethrough": false,
            "underline": false,
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false
        }
    ],
    // -------------------------------------------------------------------------------------------------------------------
    // spell check
    "cSpell.allowedSchemas": ["file", "gist", "sftp", "untitled", "more"],
    // -------------------------------------------------------------------------------------------------------------------
    // prettier format code
    "C_Cpp.updateChannel": "Insiders",
    "prettier.tabWidth": 4,
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "python.languageServer": "Microsoft"
}
